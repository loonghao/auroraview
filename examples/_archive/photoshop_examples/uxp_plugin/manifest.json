{
  "manifestVersion": 5,
  "id": "com.auroraview.photoshop.bridge",
  "name": "AuroraView Bridge",
  "version": "1.0.0",
  "main": "index.html",
  "host": [
    {
      "app": "PS",
      "minVersion": "24.0.0"
    }
  ],
  "entrypoints": [
    {
      "type": "panel",
      "id": "auroraview.panel",
      "label": {
        "default": "AuroraView"
      }
    }
  ],
  "requiredPermissions": {
    "network": {
      "domains": [
        "ws://localhost:*",
        "wss://localhost:*",
        "ws://127.0.0.1:*",
        "wss://127.0.0.1:*"
      ]
    },
    "ipc": {
      "enablePluginCommunication": true
    }
  },
  "icons": [
    {
      "width": 48,
      "height": 48,
      "path": "icons/icon.png"
    }
  ]
}

